<link rel="stylesheet" href="/stylesheets/quiz.min.css" defer/>
<div class="container-fluid quiz-container">
  <div class="row title-row center-block text-center">
    <h1 class="title-h1"><%= topic %></h1>
    <h3 class="title-h3">difficulty</h3>
    <hr class="title-hr">
  </div>
  <div class="row problem-row center-block">
    <div class="row question-row center-block">
      <p><%= problems[0].question.trim() %></p>
    </div>
    <div class="row choices-row center-block">
      <div class="col-sm-11 choices-col col">
        <div class="row choice-row">
          <div class="col-sm-1 letter-col col">
            A
          </div>
          <div class="col-sm-11 choice-col">
            <%= problems[0].choices[0].trim() %>
          </div>
        </div>
      </div>
      <div class="col-sm-1 nav-col">
        <div class="row up-row">
          <i class="fa fa-long-arrow-up" aria-hidden="true"></i>
        </div>
        <div class="row data-row">
          +5%
        </div>
        <div class="row down-row">
          DOWN
        </div>
      </div>
    </div>
  </div>
</div>
